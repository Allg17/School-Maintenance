@model IEnumerable<School_Maintenance.Models.Aulas>

@{
    ViewBag.Title = "Listado de Aulas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>@ViewBag.Title</h2>
<p>
    @if (Model.Count() == 3)
    {
        <span>Cantidad Maxima de Aulas Alcanzada!!</span>
    }
    else
    {

        @Html.ActionLink("Crear Nueva Aula", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Curso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDAula }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.IDAula })
        </td>
    </tr>
}

</table>
